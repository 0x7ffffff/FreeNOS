#include "math.h"

double f(double x, double n)
{
    return x * x - n;
}

double sqrt(double n)
{
    double err = 0.00000000001f;
    double h = 0.01f;
    double x = 1.0f;
    double xant = 0.0f;

    if (n < 0)
        return 0;

    do
    {
        xant = x;
        double df = (f(x+h, n) - f(x, n)) / h;
        x = x - f(x, n) / df;
    }
    while (abs(x - xant) > err);
    return x;
}